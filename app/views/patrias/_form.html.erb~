<%= form_for(@patria, :html => { :multipart => true }) do |f| %>
  <% if @patria.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@patria.errors.count, "error") %> prohibited this patria from being saved:</h2>

      <ul>
      <% @patria.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :nome %><br>
    <%= f.text_field :nome, :class=>"form-control",:placeholder=>"Nome" %>
  </div>
  <div class="field">
    <%= f.label :sigla %><br>
    <%= f.text_field :sigla, :class=>"form-control",:placeholder=>"Sigla" %>
  </div>
  <div class="field">
    <%= f.label :flag %><br>
    <%= f.file_field :flag, :class=>"form-control",:placeholder=>"Bandeira Nacional" %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
